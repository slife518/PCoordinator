<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_window_focused="false"
        android:drawable="@drawable/radio_button_boy_selector" />   <!--btn_radio_on-->
    <item android:state_checked="false" android:state_window_focused="false"
        android:drawable="@drawable/radio_button_boy_selector" />   !--btn_radio_off-->

    <item android:state_checked="true" android:state_pressed="true"
        android:drawable="@drawable/radio_button_girl_selector" />   <!--btn_radio_on-->
    <item android:state_checked="false" android:state_pressed="true"
        android:drawable="@drawable/radio_button_girl_selector" />   <!--btn_radio_off-->

    <item android:state_checked="true" android:state_focused="true"
        android:drawable="@drawable/radio_button_girl_selector" />    <!--btn_on_selected-->
    <item android:state_checked="false" android:state_focused="true"
        android:drawable="@drawable/radio_button_boy_selector" />  <!--btn_ooff_selected-->

    <item android:state_checked="false" android:drawable="@drawable/radio_button_boy_selector" />
    <item android:state_checked="true" android:drawable="@drawable/radio_button_girl_selector" />
</selector>
