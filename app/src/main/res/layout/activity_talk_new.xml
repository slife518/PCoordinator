<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.jk.pcoordinator.board.talk.NewTalkActivity">


    <!-- 툴바 -->
    <include layout="@layout/layout_toolbar"/>

    <EditText
        android:id="@+id/et_title"
        android:hint="@string/message_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:layout_marginTop="@dimen/app_margin_top"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_contents"
        android:hint="@string/message_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:padding="16dp"
        android:gravity="top"/>

    <ImageView
        android:id="@+id/iv_insertPhoto1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:paddingLeft="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/ib_camera"
        android:src="@drawable/ic_baseline_camera_alt_24px"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="8dp"/>
</LinearLayout>
