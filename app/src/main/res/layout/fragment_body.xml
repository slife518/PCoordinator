<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.jk.pcoordinator.mypage.BodyFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <LinearLayout style="@style/EditIcon">
            <ImageView
                android:id="@+id/btn_exit"
                style="@style/IconBack40x40"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_title"
                android:text="@string/mybody"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:layout_weight="10"/>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_input_layout_tall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_tall"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_tall" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_input_layout_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_weight"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_weight" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_input_layout_topsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_topsize"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/hint_topsize" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/topsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
            android:prompt="@string/spinner_mantopsize"
            android:id="@+id/spinner_topsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>
        </android.support.design.widget.TextInputLayout>


        <Button android:id="@+id/btn_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/black"/>


        <Spinner
            android:prompt="@string/spinner_mantopsize"
            android:id="@+id/spinner_sex"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginEnd="@dimen/myinfo_edit_marginright"        />

        <Spinner
            android:prompt="@string/spinner_mantopsize"
            android:id="@+id/spinner_size_top"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:layout_marginEnd="@dimen/myinfo_edit_marginright"/>


    </LinearLayout>
</ScrollView>


