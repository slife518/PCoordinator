<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.mybaby.MybabyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout style="@style/EditIcon"
                android:id="@+id/layout_backbutton">
                <ImageView
                    android:id="@+id/btn_exit"
                    style="@style/IconBack40x40"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:text="@string/mybaby"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:textSize="@dimen/app_fragment_title"
                    android:gravity="center"
                    android:layout_height="40dp"
                    android:layout_weight="10"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">
                <TextView
                    android:text="@string/mainTarget"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinner_main_target"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listView_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"/>
            <Button
                android:id="@+id/btn_add"
                android:text="@string/addBaby"
                android:layout_margin="16dp"
                android:background="@drawable/button_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>