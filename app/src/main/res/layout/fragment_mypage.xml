<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.jk.pcoordinator.mypage.MypageFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <Button
                            android:id="@+id/btn_myinfo"
                            android:drawableLeft="@drawable/ic_outline_insert_drive_file_24px"
                            android:text="@string/txCustomerinfo"
                            style="@style/Mypagebutton"/>
                        <Button
                            android:id="@+id/btn_mybabyinfo"
                            android:drawableLeft="@drawable/ic_baseline_accessibility_24px"
                            android:text="@string/mybabyinfo"
                            style="@style/Mypagebutton"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="16dp"
                            android:background="@android:color/black"/>
                        <Button
                            android:id="@+id/btn_password"
                            android:drawableLeft="@drawable/ic_outline_phonelink_lock_24px"
                            android:text="@string/txPassword"
                            style="@style/Mypagebutton"/>
                        <Button
                            android:id="@+id/btn_Logout"
                            android:drawableLeft="@drawable/ic_baseline_clear_24px"
                            android:text="@string/logout"
                            style="@style/Mypagebutton"/>
                </LinearLayout>

        </ScrollView>
</LinearLayout>

