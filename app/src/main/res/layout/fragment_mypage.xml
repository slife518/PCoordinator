<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.jk.pcoordinator.mypage.MypageFragment">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"
            android:background="@color/primaryColorDark"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/app_name" />

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <Button
                            android:id="@+id/btn_myinfo"
                            android:text="@string/txCustomerinfo"
                            style="@style/Mypagebutton"/>
                        <Button
                            android:id="@+id/btn_mybabyinfo"
                            android:text="@string/mybabyinfo"
                            style="@style/Mypagebutton"/>
                        <Button
                            android:id="@+id/btn_password"
                            android:text="@string/txPassword"
                            style="@style/Mypagebutton"/>
                        <Button
                            android:id="@+id/btn_bodyinfo"
                            android:text="@string/bodyinfo"
                            style="@style/Mypagebutton"/>
                        <Button
                            android:id="@+id/btn_Logout"
                            android:text="@string/logout"
                            style="@style/Mypagebutton"/>
                </LinearLayout>

        </ScrollView>
</LinearLayout>

