<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_default_small"
        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/temp_constraint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/baby_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/temp_constraint"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/baby_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아기이름"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <ImageButton
                        android:id="@+id/del_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@android:drawable/ic_delete"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:text="성별 : "
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        app:layout_constraintTop_toBottomOf="@id/del_btn" />

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="남자"
                        android:textSize="12dp"
                        app:layout_constraintLeft_toRightOf="@id/baby_name"
                        app:layout_constraintBottom_toBottomOf="@id/tv_sex" />

                    <TextView
                        android:id="@+id/birthday_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생년월일 :"
                        android:textColor="@android:color/black"
                        android:textSize="12dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_sex" />

                    <TextView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017.08.01"
                        android:textSize="12dp"
                        app:layout_constraintLeft_toRightOf="@id/birthday_title"
                        app:layout_constraintBottom_toBottomOf="@id/birthday_title" />

                </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
