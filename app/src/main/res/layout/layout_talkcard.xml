<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="5dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:background="@android:drawable/btn_default_small"-->
        <!--app:cardBackgroundColor="@color/cardview_shadow_end_color"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent">-->


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/app_margin_top"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_right"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/boardlist_margin_left"
        android:layout_marginRight="@dimen/boardlist_margin_right"
        android:layout_marginBottom="@dimen/boardlist_margin_bottom">

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_right"
        android:text="작성자닉네임"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineColor"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="@dimen/app_margin_right">
        <ImageView
            android:src="@drawable/ic_baseline_remove_red_eye_24px"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/board_like_size"
            style="@style/imageviewcolor"/>
        <TextView
            android:id="@+id/tv_eyecount"
            android:layout_weight="1"
            android:text="15"
            android:textSize="@dimen/board_number_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_good"
            android:src="@drawable/ic_baseline_thumb_up_24px"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/board_like_size"
            style="@style/imageviewcolor"/>
        <TextView
            android:id="@+id/tv_goodcount"
            android:layout_weight="1"
            android:text="90"
            android:textSize="@dimen/board_number_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ic_baseline_chat_24px"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/board_like_size"
            style="@style/imageviewcolor"/>
        <TextView
            android:id="@+id/tv_chatcount"
            android:layout_weight="1"
            android:text="60"
            android:textSize="@dimen/board_number_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_createDate"
            android:layout_weight="2"
            android:text="3시간전"
            android:textSize="@dimen/board_number_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/lineColor"/>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>
