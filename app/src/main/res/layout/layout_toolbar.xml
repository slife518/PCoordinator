<?xml version="1.0" encoding="utf-8"?>
<!-- We use a Toolbar so that our drawer can be displayed
 in front of the action bar -->
<androidx.appcompat.widget.Toolbar android:id="@+id/my_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/actionbarBackground"
    app:titleTextColor="@color/actionbarTitle"
    app:subtitleTextColor="@color/actionbarSubtitle"
    android:minHeight="?attr/actionBarSize"
    android:elevation="4dp"
    android:theme="@style/MyToolbarStyle"
    app:popupTheme="@style/AppTheme"
    style="@style/iconColorWithDarkBackground">

